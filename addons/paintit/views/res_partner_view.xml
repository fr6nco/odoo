<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_res_partner_form_paintit" model="ir.ui.view">
      <field name="name">res.partner.paintit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='vat']" position="after">
          <field name="remote_id"/>
          <field name="owner"/>
        </xpath>
      </field>
    </record>


    <record id="res_partner_view_search_paintit" model="ir.ui.view">
        <field name="name">res.partner.search.inherit.paintit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='inactive']" position="before">
                <filter string="Paintit Remote ID Set" name="remote_id" domain="[('remote_id','>', 0)]"/>
                <separator/>
            </xpath>
        </field>
    </record>


  </data>

